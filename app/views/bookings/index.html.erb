<div class="container">
  <div class="d-flex mt-5 m-3">
    <h1>Your bookings :</h1>
  </div>
  <div class="row">
    <% if @bookings.size == 0 %>
      <h1>You have no bookings...</h1>
    <% else %>
      <% @bookings.each do |booking| %>
        <div class="card-product col-4 ">
          <h2><%= booking.planet.name %> - <strong><%= booking.planet.price %>$</strong></h2>
          <% if booking.planet.photo.attached? %>
            <p><%= cl_image_tag booking.planet.photo.key, height: 200, width: 200, crop: :fill %></p>
          <% else %>
            <p><%= image_tag 'planet-par-defaut.png', height: 200, width: 200 %></p>
          <% end %>
            <div class="card-product-infos">
                <p>Du : <strong><%= booking.start_date %></strong></p>
                <p> Au : <strong><%= booking.end_date %></strong></p>
                <%= link_to "Delete", booking_path(booking), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:"btn btn-dark border border-white rounded-5 text-decoration-none"%>
                <%= link_to "Edit your booking", edit_booking_path(booking), class:"btn btn-dark border border-white rounded-5 text-decoration-none" %>
            </div>
        </div>
      <% end %>
    <% end %>
    </div>
</div>
