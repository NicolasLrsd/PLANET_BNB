
<div class="search">
    <%= form_with url: planets_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Type a planet name"
        %>
      <%= submit_tag "Search", name: "", class: "btn btn-dark rounded-5" %>
    <% end %>
</div>





<div class="cards">

    <%@planets.each do |planet|%>
    <%= link_to planet_path(planet) do %>
      <div class="card-category">
        <% if planet.photo.attached? %>
          <div class="img-card">
            <%=  cl_image_tag planet.photo.key, crop: :fit, class:"img-planet" %>
          </div>
        <% end %>
        <div class="card-text">
          <h3><%= planet.name%></h3>
          <h4><%= "Prix: #{planet.price}$ / Nuit"%></h4>
        </div>
      </div>

        <% end %>
    <%end%>
  </div>
