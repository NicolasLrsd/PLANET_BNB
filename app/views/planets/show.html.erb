<div class="container d-flex justify-content-around align-items-center">
  <div class="picture m-5">
    <% if @planet.photo.attached? %>
    <p><%= cl_image_tag @planet.photo.key, height: 700, width: 700, crop: :fill %></p>
    <% else %>
    <p><%= image_tag 'planet-par-defaut.png', height: 700, width: 700 %></p>
    <% end %>
  </div>
  <div class="content m-5">
    <h1 class="title-planet"><%= @planet.name %></h1>
    <p class="detail-planet"><%= @planet.detail%></p>
    <p class="price-planet"><%= @planet.price%>$</p>
    <% if current_user == @planet.user %>
      <%= link_to "Edit your planet", edit_planet_path, class:"btn btn-dark border border-white rounded-5 text-decoration-none"%>
      <%= link_to "Delete", planet_path(@planet), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class:"btn btn-dark border border-white rounded-5 text-decoration-none"%>
    <% else %>
      <%= link_to "Booking", new_planet_booking_path(@planet), class:"btn btn-dark border border-white rounded-5 text-decoration-none"%>
    <% end %>
  </div>
</div>
