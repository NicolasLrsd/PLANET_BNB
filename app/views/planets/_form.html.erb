<div class = "mx-auto" style="width: 400px;">
<%= simple_form_for(@planet) do |f| %>
  <%= f.input :name, input_html: { class: "rounded-5"} %>
  <%= f.input :detail, input_html: { class: "rounded-5"} %>
  <%= f.input :price, input_html: { class: "rounded-5"} %>
  <%= f.input :photo, as: :file, input_html: { class: "rounded-5"} %>
  <%= f.submit "create", class: "btn btn-dark border border-white rounded-5" %>
<% end %>
</div>
